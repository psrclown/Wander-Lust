<%= layout("/layouts/boilerplate") %>
<script>
  const mapToken ="<%=process.env.MAP_TOKEN%>";
  const listing= <%- JSON.stringify(property)%>;
</script>
<div class="container">
<div class="row mt-3">
  <div class="col-8 offset-3">
    <h3><%= property.title %></h3>
  </div>
  <div class="listing-card col-lg-6 col-md-8 col-sm-10 mx-auto show-card">
    <img
      src="<%= property.image.url %>"
      class="card-img-top show-img"
      alt="listing image"
    />
    <div class="card-body">
     <p class="card-text"> Owned By <i><%= property.owner.username %></i></p>
      <p class="card-text"><%= property.description %> </p>
       <p class="card-text"> &#8377; <%= property.price.toLocaleString("en-in") %></p>
       <p class="card-text"> <%= property.location %></p>
       <p class="card-text"> <%= property.country %></p>
    </div>
    <hr>
    <h3>Where you'll be</h3>
    <div id="map"></div>
  </div>

</div>

<% if(currUser && property.owner._id.equals(currUser._id)){ %>
<div class="btns mb-3">
  <a href="<%= property.id %>/edit" class="btn btn-dark col-1 offset-3 edit-btn mb-2 mb-md-0">Edit</a>
    <form action="/listings/<%= property.id %>?_method=DELETE" method="POST" class="d-inline-block ms-0 ms-md-3">
      <button class="btn btn-dark">Delete</button></form>
</div>
<%}%>
<div class="col-8 offset-3 mb-3">
<% if(currUser){ %>
  <hr>
  <h4>Leave a review</h4>
  <form action="/listings/<%= property.id %>/reviews" method="POST" novalidate class="needs-validation">
  </div>
<div class="col-8 offset-3 mb-3">
  <label for="rating" class="form-label">Rating</label>
  <fieldset class="starability-slot">
  <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No review." />
  <input type="radio" id="first-rate1" name="review[rating]" value="1" />
  <label for="first-rate1" title="Terrible">1 star</label>
  <input type="radio" id="first-rate2" name="review[rating]" value="2" />
  <label for="first-rate2" title="Not good">2 stars</label>
  <input type="radio" id="first-rate3" name="review[rating]" value="3" />
  <label for="first-rate3" title="Average">3 stars</label>
  <input type="radio" id="first-rate4" name="review[rating]" value="4" />
  <label for="first-rate4" title="Very good">4 stars</label>
  <input type="radio" id="first-rate5" name="review[rating]" value="5" />
  <label for="first-rate5" title="Amazing">5 stars</label>
</fieldset>
    <div class="mb-3 mt-3">
      <label for="comment" class="form-label">Comments
      </label>
      <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control" required></textarea>
      <div class="invalid-feedback">Please enter a vaild comment</div>
    </div>
    <button class="btn btn-outline-dark">Submit</button>
  </form>
  <hr>
<% } %>
<% if (property.reviews.length>0) { %>
   <div class="row mt-3">
  <p><b>All reviews</b></p>
<% property.reviews.forEach(review => { %>
<div class="card col-lg-5 col-md-6 col-sm-10 mx-3 mb-3">
<div class="card-body">
  <h5 class="card-title"><%= review.author.username %></h5>
  <p class="card-text"><%=review.comment%></p>
  <p class="starability-result card-text" data-rating="<%=review.rating%>"></p>
</div>
<% if (currUser) { %>
  <form action="<%= property.id %>/reviews/<%=review._id %>?_method=DELETE" method="POST">
    <button class="btn btn-sm btn-dark">Delete</button>
  </form>
  <% } %>
  </div>
 <% }); %>
   </div>
 <% } %>
</div>
</div> <!-- End container -->

<script src="/js/map.js"></script>