<%= layout("/layouts/boilerplate") %>
<div class="row mt-3">
  <div class="col-8 offset-2">
    <body>
      <h3>Edit Listing</h3>
      <form
        action="/listings/<%= editListing.id %>?_method=PUT"
        method="POST"
        novalidate
        class="needs-validation"
        enctype="multipart/form-data"
      >
        <div class="mb-3">
          <label for="title" class="form-lable">Title</label>
          <input
            name="listing[title]"
            type="text"
            value="<%= editListing.title%>"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Please Enter Title</div>
          <div class="valid-feedback">Title Looks Good!!</div>
        </div>

        <div class="mb-3">
          <label for="description" class="form-lable">Description</label>
          <textarea
            name="listing[description]"
            type="text"
            class="form-control"
            required
          >
<%= editListing.description%></textarea
          >
          <div class="invalid-feedback">Please Enter Short Description</div>
        </div>
        <div class="row">
          <div class="mb-3 col-md-4">
            <label for="price" class="form-lable">Price</label>
            <input
              name="listing[price]"
              value="<%=editListing.price %>"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Please Enter Vaild Price</div>
          </div>
          <div class="mb-3 col-md-8">
            <label for="country">Country</label>
            <input
              name="listing[country]"
              type="text"
              value="<%=editListing.country %>"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Please Enter Vaild Country Name</div>
          </div>
        </div>

        <div class="mb-3">
          <label for="dropdown" class="form-lable">Choose Category</label>
          <select name="listing[category]" id="dropdown" class="form-select">
            <option selected>Select Category</option>
            <option value="mountains">Mountains</option>
            <option value="rooms">Rooms</option>
            <option value="farms">Farms</option>
            <option value="arctic">Arctic</option>
            <option value="castles">Castles</option>
            <option value="iconiccities">Iconic cities</option>
            <option value="amazingpools">Amazing pools</option>
            <option value="camping">Camping</option>
            <option value="trending">Trending</option>
            <option value="domes">Domes</option>
            <option value="houseboat">Houseboat</option>
          </select>
          <div class="invalid-feedback">Please choose valid category</div>
        </div>

        <div class="mb-3">
          Original Listing Image <br />
          <img
            src="<%= originalImageUrl %>"
            alt=""
            height="200px"
            width="250px"
          />
        </div>

        <div class="mb-3">
          <label for="image" class="form-lable">Upload new Image </label>
          <input name="listing[image]" type="file" class="form-control" />
        </div>

        <div class="mb-3">
          <label for="location" class="form-lable">Location</label>
          <input
            name="listing[location]"
            type="text"
            value="<%=editListing.location %>"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Please Enter Vaild Address</div>
        </div>
        <button class="btn btn-dark edit-btn mt-3">Edit</button>
      </form>
    </body>
  </div>
</div>
